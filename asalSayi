package miniProjeAsalSayilar;

public class Main {

	public static void main(String[] args) {
		int sayi = 1;
		int kalan = sayi % 2; 
		//System.out.println(kalan);
		boolean isItPrime = true;
		
		
		if(sayi == 1) {
			System.out.println("Bu sayi asal degildir.");
			return;
		}
		
		if(sayi < 1) {
			System.out.println("Gecersiz sayi girdiniz.");
		}
		
		
		for (int i = 2; i < sayi ; i++) {
			if(sayi % i == 0) {
				isItPrime = false;
			}
		}
		
		if (isItPrime) {
			System.out.println("Bu sayi asal sayidir.");
		}
		
		else {
			System.out.println("Bu sayi asal degildir.");

		}
			
		
		
	}

}
